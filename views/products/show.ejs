<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Comment App</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"
        integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <script src="/node_modules/readmore-js/readmore.min.js"></script>

</head>

<body>
    <div class="container text-center">
        <div class="row">
            <div class="col-lg-7 col-lg-push-2 col-sm-12">
                <div class="card">
                    <img src="/<%= product.image%>" class="program-index_img" alt="Image">

                    <div class="card-body">
                        <h4 class="card-title">
                            <%=product.title %>
                        </h4>
                        
                        <p class="card-text">
                            <%= product.description %>
                        </p>
                    </div>
                   
                </div>
                <a href="/products" class="back">Back to Post</a>
                <a href="/products/<%= product.id %>/edit">Edit</a>
                <a href="/products/<%= product.id %>/delete" id="delete-product" data-id="<%= product.id %>">Delete</a>

            </div>
            
        </div>


        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js"></script>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
         
    </div>
</body>

</html>

